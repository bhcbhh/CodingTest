#include <string>
#include <vector>
#include <algorithm>

using namespace std;

string solution(string s) {
    
    for(int i = 0; i < s.size(); i++){
     if(!isdigit(s[i]) && int(s[i]) < 97 && s[i] != ' '){ 
        s[i] = char(int(s[i]) + 32);
      }
    }
    
    
    if( !isdigit(s[0])) {
        s[0] = char(int(s[0]) - 32);
    }
    
    
     for(int i = 0; i < s.size()-1; i++){
     if(s[i] == ' ' && !isdigit(s[i+1]) ){
        s[i+1] = char(int(s[i+1]) - 32);
     }
    }
    
    return s;
    
 }
