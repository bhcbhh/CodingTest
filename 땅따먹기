#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;



int solution(vector<vector<int> > land)
{
   int max = -1;
    
    
   for(int i = 0; i < land.size()-1; i++){
       vector <int> v;
    for(int j = 0; j < 4; j++){
        for(int k = 0; k <4; k++){
            if(k != j){ 
             int temp = land[i][j] + land[i+1][k];
             if(temp > max){
                 max = temp;
             }
           }
         } 
        cout << endl;
        v.push_back(max); 
        max = -1;
      } land[i+1][0] = v[0];  
        land[i+1][1] = v[1];ã…‡
        land[i+1][2] = v[2];
        land[i+1][3] = v[3];
   }
  
   int len = land.size() - 1;
   sort(land[len].begin(),land[len].end());
   return land[len][3];
  
}
